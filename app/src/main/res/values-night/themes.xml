<resources>
    <!-- Base application theme. -->
    <style name="Theme.SolanaMobileDappScaffold" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/teal</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="BottomNavigationTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal</item>
    </style>

    <style name="CustomFontTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/custom_font</item>
    </style>
</resources>